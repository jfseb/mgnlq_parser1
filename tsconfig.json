{
    "compilerOptions": {
      "target": "es2017",
      "skipLibCheck": true, // avoid lodash WeakMap mismatch
      // "target": "es5",
      //"target": "es2015",
      // "module" : "es6", //'es2015
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      //  "jsx": "react",
       // "watch" : true,
        // new ^^
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "outDir" : "js",
        "sourceMap" : false,
        "inlineSourceMap": true,
        "preserveConstEnums": true,
         //"jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
		"src/match/algol.ts",
        "src/match/charsequence.ts",
        "src/match/erbase.ts",
        "src/match/er_index.ts",
        "src/match/ererror.ts",
        "src/match/iferbase.ts",
        "src/match/iferbase.ts",
        "src/match/inputFilter.ts",
        "src/match/sentence.ts",
        "src/match/word.ts",
        "src/index.ts",
        "src/parser.ts",
        "src/formaterror.ts",
        "src/ast2query/ast2MQuery.ts",
        "src/mongoq.ts",
        "src/sentenceparser.ts",
        "src/ast.ts",
        "src/tokens.ts"
     ],
    "exclude": [
    "!node_modules/**"
    ]
}